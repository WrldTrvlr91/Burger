<div class="container-fluid ">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <img id="burgerPic" src="/assets/css/img/burgertile.png" alt="image of a burger"
                class="justify-content-center" />
        </div>
    </div>

    <div class="row mt-5 justify-content-center">
        <div class="col-4 text-center ">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    
                      <li class="burgerList">
                    {{burger_name}}
                    {{devoured: true}}
                    <button class="devour-burger btn-sm float-right btn-success" data-id="{{id}}" data-eatentime="{{devoured}}">Devour It!</button></li>
                    	
                    
                </br>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4 text-center">
                        <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    
                      <li class="bg-white">
                    {{burger_name}}
                </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-3 text-center">
            <form>
                <div class="form-group">
                    <input type="text" id="newBurgerName" name="newBurgerName" class="form-control">
                    <button type="submit" class="btn mt-3 btn-danger">Submit</button>
                    <p class="mt-3">Enter a burger you want to eat and Click the "Submit" button</p>
                </div>

            </form>
        </div>
    </div>

</div>