{{!-- Master Container --}}
<div class="container-fluid ">

    {{!-- Row to hold header image --}}
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <img id="burgerPic" src="/assets/img/burgertile.png" alt="image of a burger"
                class="justify-content-center" />
        </div>
    </div>

    {{!-- Row to hold burgers and their status --}}
    <div class="row mt-5 justify-content-center">

        {{!-- Left col ul with un-devoured burgers --}}
        <div class="col-3">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="burgerList">
                    {{burger_name}}
                    <button class="devour-burger btn-sm float-right btn-success" data-id="{{id}}"
                        data-eatentime="TRUE">Devour It!</button>
                </li>
                </br>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        {{!-- Right col ol with devoured burgers --}}
        <div class="col-3">
            <ol class="bg-white">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>

    </div>

    {{!-- Row to hold form --}}
    <div class="row mt-5 justify-content-center">
        <div class="col-3 text-center">

            {{!-- Form to submit new un-devoured burgers --}}
            <form class="create-burger">
                <div class="form-group">
                    <input type="text" id="newBurgerName" name="newBurgerName" class="form-control">
                    <button type="submit" class="btn mt-3 btn-danger" value="Submit">Submit</button>
                    <p class="mt-3">Create a new burger by entering name and clicking Submit</p>
                </div>
            </form>
        </div>
    </div>

</div>